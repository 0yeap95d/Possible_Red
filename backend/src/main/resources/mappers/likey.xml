<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ssafy.SNS201.mapper.LikeyMapper"> <!-- mybatis는 namespace필수!! -->
    <select id="selectLikeyByPostNo" resultType="Likey" parameterType="int">
        SELECT *
         FROM likey
        WHERE postNo = #{postNo}
        ORDER BY pushDate;
    </select>

    <insert id="insertLikey" parameterType="Likey">
        INSERT INTO likey(
            memberNo,
            postNo,
            pushDate
        ) VALUES (
            #{memberNo},
            #{postNo},
            now()
        )
    </insert>

    <!-- delete likey 하기 위해 likeyNo 뽑아 오는 작업 -->
    <select id="selectLikeyByNameAndPostNo" parameterType="Likey" resultType="int">
        SELECT likeyNo
         FROM likey
        WHERE
            memberNo = #{memberNo} and
            postNo = #{postNo}
    </select>

    <delete id="deleteLikey" parameterType="int">
        DELETE FROM likey
        WHERE
            likeyNo = #{likeyNo}
    </delete>
</mapper>
